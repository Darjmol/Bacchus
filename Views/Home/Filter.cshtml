<form asp-action="Index" method="get">
    <div>
        <p>
            @Html.DropDownList("filter", ((List<string>)ViewBag.categories).Select(c => new SelectListItem { Text = c, Value = c }), "Choose a category:", new { @class = "css-class" })
            <input type="submit" value="Search" class="btn btn-info btn-xs" />
            <br /> <a asp-action="Index">Remove category</a>
        </p>
    </div>
</form>